{
	"name": "load_missing_file",
	"properties": {
		"activities": [
			{
				"name": "SourceData",
				"type": "GetMetadata",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
