{
	"name": "dataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DataFlowDataSet",
						"type": "DatasetReference"
					},
					"name": "sourceCSV"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DataFlowOutput",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "selectCols"
				},
				{
					"name": "filter"
				},
				{
					"name": "filterRowNum"
				},
				{
					"name": "windowRowNum"
				},
				{
					"name": "split1"
				},
				{
					"name": "derivedColumn"
				},
				{
					"name": "alterRow1"
				},
				{
					"name": "alterRow2"
				},
				{
					"name": "alterRow3"
				},
				{
					"name": "union1"
				},
				{
					"name": "sort"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Index as short,",
				"          {Customer Id} as string,",
				"          {First Name} as string,",
				"          {Last Name} as string,",
				"          Company as string,",
				"          City as string,",
				"          Country as string,",
				"          {Phone 1} as string,",
				"          {Phone 2} as string,",
				"          Email as string,",
				"          {Subscription Date} as date,",
				"          Website as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceCSV",
				"filterRowNum select(mapColumn(",
				"          Index,",
				"          {Customer Id},",
				"          {First Name},",
				"          {Last Name},",
				"          City,",
				"          Country",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectCols",
				"selectCols filter(Country != 'Solomon Islands') ~> filter",
				"windowRowNum filter(rn==1) ~> filterRowNum",
				"sourceCSV window(over({Customer Id}),",
				"     asc({Customer Id}, true),",
				"     rn = rowNumber()) ~> windowRowNum",
				"filter split(Country=='United Arab Emirates',",
				"     Country=='United States of America',",
				"     disjoint: false) ~> split1@(UAE, USA, RemainingCountries)",
				"split1@USA derive(Country = replace('United States of America',' States of A', 'StatesofA')) ~> derivedColumn",
				"split1@UAE alterRow(insertIf(1==1)) ~> alterRow1",
				"derivedColumn alterRow(insertIf(1==1)) ~> alterRow2",
				"split1@RemainingCountries alterRow(insertIf(1==1)) ~> alterRow3",
				"alterRow1, alterRow2, alterRow3 union(byName: true)~> union1",
				"union1 sort(asc(Index, true)) ~> sort",
				"sort sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Index as string,",
				"          {Customer Id} as string,",
				"          {First Name} as string,",
				"          {Last Name} as string,",
				"          Company as string,",
				"          City as string,",
				"          Country as string,",
				"          {Phone 1} as string,",
				"          {Phone 2} as string,",
				"          Email as string,",
				"          {Subscription Date} as string,",
				"          Website as string",
				"     ),",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}