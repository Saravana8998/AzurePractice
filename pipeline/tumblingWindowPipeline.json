{
	"name": "tumblingWindowPipeline",
	"properties": {
		"activities": [
			{
				"name": "Copy data",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "CopyDataSrc",
						"type": "DatasetReference",
						"parameters": {
							"p_file_name": {
								"value": "@concat('sales_',formatDateTime(pipeline().parameters.pWindowStart, 'yyyyMMdd_HHmm'),'.csv')\n",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "CopyDataDest",
						"type": "DatasetReference"
					}
				]
			}
		],
		"parameters": {
			"pWindowStart": {
				"type": "string"
			},
			"pWindowEnd": {
				"type": "string"
			}
		},
		"annotations": [],
		"lastPublishTime": "2025-12-12T17:26:56Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}